{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    },
    "ignore": ["dist"]
  }
}
